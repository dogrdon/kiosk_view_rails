<div id="main-book">
	
	<div id="container-book"
		<div class="row">
			<div class="col-lg-3">
				<h2>Book <%= @book.id %> = <%= @book.title %> </h2>

				<%= image_tag @book.thumb.url(:medium) %>

				<p><b>Creator: </b><%= @book.creator %></p>
				<p><b>Publisher: </b><%= @book.publisher %></p>
				<p><b>Year of Publishing: </b><%= @book.year %></p>



				<%= link_to 'Back to books list', books_path %> | <%= link_to 'Edit', edit_book_path(@book) %>
			</div> <!-- .span4 -->

			<div class="col-lg-9">
				
				

				<div id="flipbook">
					<div class="hard"> Cover Image Goes Here</div>
					<div class="hard"> In side Cover Image Goes Here</div>

					<%= render "pages/flipbook" %>

					<div class="hard">Inside back image goes here</div>
				    <div class="hard">Back image goes here</div>

				</div>
			</div>

			<%= javascript_include_tag "turn_pages" %>

		</div> <!-- .row -->
	</div> <!-- #container-book -->
</div> <!-- #main-book -->
